<div class="shipping-flow-chart-wrapper page-width">
  <div class="shipping-flow-chart-title">
    <h3>{{ section.settings.heading }}</h3>
  </div>

  <div class="shipping-flow-chart-container">
    
      {% for block in section.blocks %}
        {% if forloop.index == 1 %}
          <div class="step-one step-wrapper">
            <div class="img-wrapper">
              <img src="{{ block.settings.icon-1 | image_url }}" alt="{{ block.settings.text }}" class="step-one-image image-size">
            </div>
            <div class="subtitle">
              <p>{{ block.settings.text }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}

      {% for block in section.blocks %}
        {% if forloop.index == 2 %}
          <div class="arrow-one arrow-size">
            <img src="{{ 'straight-arrow.png' | asset_url }}" alt="straight-arrow" class="straight-arrow image-size">
          </div>
          
          <div class="step-two step-wrapper">
            <div class="img-wrapper">
              <img src="{{ block.settings.icon-1 | image_url }}" alt="{{ block.settings.text }}" class="step-two-image image-size">
      
            </div>
            <div class="subtitle">
              <p>{{ block.settings.text }}</p>
            </div>
          </div>      
        {% endif %}
      {% endfor %}

      {% for block in section.blocks %}
        {% if forloop.index == 3 %}
          <div class="arrow-two arrow-size">
            <img src="{{ 'straight-arrow.png' | asset_url }}" alt="straight-arrow" class="straight-arrow desktop image-size">
            <img src="{{ 'slightly-curve-arrow.png' | asset_url }}" alt="slightly-curve-arrow" class="slightly-curve-arrow mobile image-size">
          </div>
          
          <div class="step-three step-wrapper">
            <div class="img-wrapper">
              <img src="{{ block.settings.icon-1 | image_url }}" alt="{{ block.settings.text }}" class="step-three-image image-size">
      
            </div>
            <div class="subtitle">
              <p>{{ block.settings.text }}</p>
            </div>
          </div>

        {% endif %}
      {% endfor %}

      {% for block in section.blocks %}
        {% if forloop.index == 4 %}
      
          <div class="arrow-three arrow-size">
            <img src="{{ 'straight-arrow.png' | asset_url }}" alt="straight-arrow" class="straight-arrow image-size">
          </div>
          
          <div class="step-four step-wrapper">
            <div class="img-wrapper">
              <img src="{{ block.settings.icon-1 | image_url }}" alt="{{ block.settings.text }}" class="step-four-image image-size">  
            </div>
            <div class="subtitle">
              <p>{{ block.settings.text }}</p>
            </div>
          </div>
          
        {% endif %}
      {% endfor %}

      {% for block in section.blocks %}
        {% if forloop.index == 5 %}
      
          <div class="arrow-four arrow-size">
            <img src="{{ 'equal-sign.png' | asset_url }}" alt="equal-sign" class="equal-sign desktop image-size">
            <img src="{{ 'curve-arrow.png' | asset_url }}" alt="curve-arrow" class="curve-arrow mobile image-size">
          </div>
          
          <div class="step-five-container">
            <div class="step-five step-wrapper">
              <div class="img-wrapper">
                <img src="{{ block.settings.icon-1 | image_url }}" alt="{{ block.settings.text }}" class="step-five-image image-size">
      
              </div>
              <div class="subtitle">
                <p>{{ block.settings.text }}</p>
              </div>
            </div>
          </div>

        {% endif %}
      {% endfor %}

  </div>
</div>


{% schema %}
  {
    "name": "Featured Icons Arrow (C)",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Custom Made By Hand Just For You !"
      }
    ],
    "blocks": [
      {
        "type": "icons-with-text",
        "name": "IWT - Block",
        "limit": 5,
        "settings": [
          {
            "type": "image_picker",
            "id": "icon-1",
            "label": "Icon"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Heading"
          }
        ]
      }
    ],
    "presets":[
      {
        "name": "Featured Icons Arrow (C)"
      }
    ]
  }
{% endschema %}