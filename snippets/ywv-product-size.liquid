  .ywv-modal-content_new {
    padding-left: 0px;
    padding-right: 0px;
  }
  #productsizemodal .size-chart-wrapper .table-wrapper {
    max-height: 700px;
  }
  .sizechart-heading-2 h3 {
    text-align: left;
  }
}

@media only screen and (max-width : 768px) {
  .ywv-modal-content_new {
    padding-left: 0px;
    padding-right: 0px;
  }
  .product-desk-wrapper {
    max-height: 86vh;
  }
  .sizechart-heading-2 h3 {
    text-align: left;
    margin-bottom: 0px;
  }
  #productsizemodal .size-chart-wrapper {
    padding: 40px 15px 0px 15px;
  }
  #productsizemodal .select-gen-wrapper ul li a, #productsizemodal .select-measr ul li a {
    font-size: 14px;
  }
  #productsizemodal .selectgender-measurment ul li {
    display: inline-block;
    padding-left: 5px;
    padding-right: 5px;
  }
  #productsizemodal .selectgender-measurment ul li.womenliclass {
    padding-right: 5px;
    padding-left: 5px;
  }
  .freesizeguide img {
    height: 50px;
  }
  .freesizeguide {
    font-size: 11px;
  }
  #productsizemodal .size-chart-wrapper .table-wrapper {
    max-height: 530px;
  }
  #productsizemodal .sizeclose {
    right: 16px;
  }
}
@media only screen and (min-device-width:768px) and (max-device-height:1024px) {
  .freesizeguide {
    font-size: 18px;
  }
}  
</style>

{%- endif -%}
    