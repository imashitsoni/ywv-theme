<style>
  .ywv-uvp-icons-wrap {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 5px;
    margin: 15px 0;
  }
  .ywv-uvp-icons-wrap .icon-block {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 10px;
  }
  .ywv-uvp-icons-wrap img.i-img {
    width: 100%;
    height: auto;
    max-height: 45px;
    max-width: 45px;
  }
  .ywv-uvp-icons-wrap .i-txt {
    color: #000;
    font-size: 15px;
    text-transform: capitalize;
    word-break: break-word;
  }

  @media (max-width: 1024px) {
    .ywv-uvp-icons-wrap img.i-img {
      max-height: 35px;
      max-width: 35px;
    }
  }

  @media (max-width: 768px) {
  }

  @media (mmin-width: 550px) {
  }
</style>

<div class="ywv-uvp-icons-wrap">
  {% if block.settings['icon-1'] %}
    <div class="icon-block">
      <img class="i-img" src="{{ block.settings.icon-1 | image_url }}" alt="uvp-icons">
      <div class="i-txt">{{ block.settings['text-1'] }}</div>
    </div>
  {% endif %}

  {% if block.settings['icon-2'] %}
    <div class="icon-block">
      <img class="i-img" src="{{ block.settings.icon-2 | image_url }}" alt="uvp-icons">
      <div class="i-txt">{{ block.settings['text-2'] }}</div>
    </div>
  {% endif %}

  {% if block.settings['icon-3'] %}
    <div class="icon-block">
      <img class="i-img" src="{{ block.settings.icon-3 | image_url }}" alt="uvp-icons">
      <div class="i-txt">{{ block.settings['text-3'] }}</div>
    </div>
  {% endif %}

  {% if block.settings['icon-4'] %}
    <div class="icon-block">
      <img class="i-img" src="{{ block.settings.icon-4 | image_url }}" alt="uvp-icons">
      <div class="i-txt">{{ block.settings['text-4'] }}</div>
    </div>
  {% endif %}

  {% if block.settings['icon-5'] %}
    <div class="icon-block">
      <img class="i-img" src="{{ block.settings.icon-5 | image_url }}" alt="uvp-icons">
      <div class="i-txt">{{ block.settings['text-5'] }}</div>
    </div>
  {% endif %}
</div>
